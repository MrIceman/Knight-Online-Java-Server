package com.knightonline.shared.data.enums;

import java.io.Serializable;
import java.util.HashMap;
import java.util.Map;
import java.util.Map.Entry;

/**
 * @author Mamaorha
 *
 */
public enum NationEnum implements Serializable
{
	NO_NATION(0), KARUS(1), ELMORAD(2);
	
	private short value;
	private static Map<Short, NationEnum> namesMap = new HashMap<Short, NationEnum>();

	NationEnum(short value)
	{
		this.value = value;
	}

	public short getValue()
	{
		return this.value;
	}

	static
	{
		final NationEnum[] values = NationEnum.values();
		
		for (NationEnum temp : values)
		{
			namesMap.put(temp.getValue(), temp);
		}
	}

	public static NationEnum forValue(short value)
	{
		return namesMap.get(value);
	}
	
	public String toValue()
	{
		for (Entry<Short, NationEnum> entry : namesMap.entrySet())
		{
			if (entry.getValue() == this)
				return entry.getKey();
		}
		
		return null; 
	}
}
