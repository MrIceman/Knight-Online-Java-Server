package com.knightonline.main;

import com.knightonline.data.ConfigurationConstants;
import com.knightonline.utils.ApplicationPropertiesManager;
import com.knightonline.utils.KOApplicationContext;
import com.knightonline.utils.PrintUtils;

public class Main
{
	public static void main(String[] args)
	{
		final long start = System.currentTimeMillis();

		System.out.println(PrintUtils.printSection("Initializing Spring & Hibernate"));
		
		KOApplicationContext.getInstance().init();
		
		System.out.println(PrintUtils.printSection("LogIn Server for Knight Online v" + ApplicationPropertiesManager.getInstance().getValue(ConfigurationConstants.SERVER_VERSION, ConfigurationConstants.DEFAULT_SERVER_VERSION)));
		
		System.out.println("Server started in " + ((System.currentTimeMillis() - start) / 1000) + " seconds");		
	}
}
